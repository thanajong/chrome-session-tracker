{
  "manifest_version": 3,
  "name": "Sessional",
  "version": "1.0",
  "description": "Analyze your browsing session.",
  "permissions": [
    "storage",
    "history",
    "tabs"
  ],
  "action": {
    "default_title": "Sessional",
    "default_popup": "./src/popup.html"
  },
  "background": {
    "service_worker": "./src/background.js"
  },
  "host_permissions": [
    "<all_urls>"
  ]
}
